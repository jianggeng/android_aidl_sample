<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.jgeng.aidlserver"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name=".AidlServerService"
                 android:process=":remote">
            <intent-filter>
                <action android:name="com.jgeng.IAIDLServerService.aidl"></action>
            </intent-filter>
            <intent-filter>
                <action android:name="com.jgeng.IAIDLServerService.messenger"></action>
            </intent-filter>
        </service>
    </application>

</manifest>